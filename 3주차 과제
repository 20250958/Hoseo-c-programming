#include <stdio.h>

#define PRODUCT_COUNT 5

int main() {
    int incoming_stock[PRODUCT_COUNT] = {0};
    int sales_quantity[PRODUCT_COUNT] = {0};
    int current_stock[PRODUCT_COUNT] = {0};

    int menu_choice;

    while (1) {
        printf("[쇼핑몰 관리 프로그램]\n");
        printf("> 원하는 메뉴를 선택하세요.(1. 입고, 2. 판매, 3. 상품현황, 4. 종료)\n");
        scanf("%d", &menu_choice);

        if (menu_choice == 1) {
            int sub_choice;
            printf("입고수량 입력 : 전체 상품 입고수량 입력 1, 개별 상품 입력 2를 선택\n");
            scanf("%d", &sub_choice);

            if (sub_choice == 1) {
                for (int i = 0; i < PRODUCT_COUNT; i++) {
                    int amount;
                    scanf("%d", &amount);
                    incoming_stock[i] += amount;
                }
            } else if (sub_choice == 2) {
                int product_id;
                int amount;

                printf("상품ID : ");
                scanf("%d", &product_id);

                printf("입고수량 : ");
                scanf("%d", &amount);

                if (product_id >= 1 && product_id <= PRODUCT_COUNT) {
                    incoming_stock[product_id - 1] += amount;
                }
            }
        } 
        else if (menu_choice == 2) {
            int sub_choice;
            printf("판매수량 입력 : 전체 상품 판매수량 입력 1, 개별 상품 입력 2를 선택\n");
            scanf("%d", &sub_choice);

            if (sub_choice == 1) {
                for (int i = 0; i < PRODUCT_COUNT; i++) {
                    int amount;
                    scanf("%d", &amount);
                    sales_quantity[i] += amount;
                }
            } else if (sub_choice == 2) {
                int product_id;
                int amount;

                printf("상품ID : ");
                scanf("%d", &product_id);

                printf("판매수량 : ");
                scanf("%d", &amount);

                if (product_id >= 1 && product_id <= PRODUCT_COUNT) {
                    sales_quantity[product_id - 1] += amount;
                }
            }
        } 
        else if (menu_choice == 3) {
            int total_sales = 0;
            int total_incoming = 0;
            float sales_rate = 0.0;

            for (int i = 0; i < PRODUCT_COUNT; i++) {
                current_stock[i] = incoming_stock[i] - sales_quantity[i];
                total_sales += sales_quantity[i];
                total_incoming += incoming_stock[i];
            }

            int max_sales_quantity = sales_quantity[0];
            int max_sales_id = 1;
            int min_sales_quantity = sales_quantity[0];
            int min_sales_id = 1;

            for (int i = 1; i < PRODUCT_COUNT; i++) {
                if (sales_quantity[i] > max_sales_quantity) {
                    max_sales_quantity = sales_quantity[i];
                    max_sales_id = i + 1;
                }
                if (sales_quantity[i] < min_sales_quantity) {
                    min_sales_quantity = sales_quantity[i];
                    min_sales_id = i + 1;
                }
            }

            if (total_incoming > 0) {
                sales_rate = ((float)total_sales / total_incoming) * 100.0;
            }

            printf("재고수량 : ");
            for (int i = 0; i < PRODUCT_COUNT; i++) {
                printf("%d ", current_stock[i]);
            }
            printf("\n");

            printf("총 판매량 : %d (판매율 %.2f%%)\n", total_sales, sales_rate);
            printf("가장 많이 판매된 상품 : ID %d, 판매량 %d\n", max_sales_id, max_sales_quantity);
            printf("가장 적게 판매된 상품 : ID %d, 판매량 %d\n", min_sales_id, min_sales_quantity);

            for (int i = 0; i < PRODUCT_COUNT; i++) {
                if (current_stock[i] <= 2) {
                    printf("상품 ID %d : 재고부족(%d)\n", i + 1, current_stock[i]);
                }
            }
        } 
        else if (menu_choice == 4) {
            break;
        } 
    } 

    return 0;
}
